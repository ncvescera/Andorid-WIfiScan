<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btnSave" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorButtonNormal">@color/btnDisabled</item>
        <item name="colorAccent">@color/btnSaveEnabled</item>
    </style>

    <style name="btnScan" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorButtonNormal">@color/btnDisabled</item>
        <item name="colorAccent">@color/btnScanEnabled</item>
    </style>

    <style name="btnSearch" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorButtonNormal">@color/btnDisabled</item>
        <item name="colorAccent">@color/btnScanEnabled</item>
        <item name="tint">#FFFFFF</item>
    </style>

</resources>